<p style="color: green"><%= notice %></p>

<h2  class="d-flex justify-content-center mb-4">Mes réservations</h2>

<div class="mx-5">
  <table class="table table-striped table-bordered text-center">
    <thead class="align-middle">
    <tr>
      <th>Numéro de vol</th>
      <th>Aéroport de départ</th>
      <th>Aéroport d’arrivée</th>
      <th>Date et heure de départ</th>
      <th>Date et heure d’arrivée</th>
      <th>Nombre du siège</th>
      <th>Classe de siège</th>
      <th>Modifier</th>
      <th>Annuler</th>
    </tr>
    </thead>
    <tbody class="align-middle">
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.flight.number %></td>
        <td><%= reservation.flight.departure_airport %></td>
        <td><%= reservation.flight.arrival_airport %></td>
        <td><%= l reservation.flight.departure_date, format: :default_without_second %></td>
        <td><%= l reservation.flight.departure_date + reservation.flight.duration.minutes, format: :default_without_second %></td>
        <td><%= reservation.seat_number %></td>
        <td><%= reservation.seat_class_choice.name %></td>
        <td><%= link_to "Modifier", edit_reservation_path(id: reservation.id), class: "btn btn-primary text-white" %></td>
        <td><%= link_to "Annuler", reservation_path(id: reservation.id), method: :delete, class: "btn btn-danger text-white"%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= paginate @reservations, class: 'pagination justify-content-center' %>
