<p style="color: green"><%= notice %></p>

<h2  class="d-flex justify-content-center mb-4">Mes réservations</h2>

<div class="mx-5">
  <table class="table table-striped table-bordered text-center">
    <thead>
    <tr>
      <th>Numero de vol</th>
      <th>Nombre du siège</th>
      <th>Type de siège</th>
      <th>Modifier</th>
      <th>Supprimer</th>
    </tr>
    </thead>
    <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.flight.number %></td>
        <td><%= reservation.seat_number %></td>
        <td><%= reservation.seat_class_choice.name %></td>
        <td><%= link_to "Modifier", edit_reservation_path(id: reservation.id), class: "btn btn-primary text-white" %></td>
        <td><%= link_to "Supprimer", reservation_path(id: reservation.id), method: :delete, class: "btn btn-danger text-white"%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= paginate @reservations, class: 'pagination justify-content-center' %>
