<div class="form-signin width-login">
  <h1 class="h3 mb-3 fw-normal">Modifier votre mot de passe</h1>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-3">
      <%= f.label :password, "Nouveau mot de passe" %><br>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
      <% end %>
      <%= f.password_field :password, class: "form-control mb-2", autocomplete: "new-password" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Confirmer votre nouveau mot de passe" %>
      <%= f.password_field :password_confirmation, class: "form-control mb-3", autocomplete: "new-password" %>
    </div>

    <div class="actions mb-1">
      <%= f.submit "Changer mon mot de passe", class: "btn btn-primary w-100 py-2" %>
    </div>
  <% end %>

  <div class="actions mb-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
